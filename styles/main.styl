@import '../node_modules/jeet/stylus/jeet/index'
@import 'globals'
@import 'header'
@import 'aside'

body
	background-color background-color
	color text-color
	font-family 'Open Sans', sans-serif
	padding 0px
	margin 0px
	
	h1, h2, h3, h4, h5, h6
		color titles-color

ng-map
	height 700px
	span(1/1)
.search-place
	width 360px
	height 50px
	position absolute
	background-color #fff
	border-radius 2px
	top 60px
	z-index 999
	left 10px
	box-shadow 0 0 5px 1px rgba(0,0,0,.2)
	label
		background-color #7f8c8d
		span(1/1)
		color #fff
		font-size 14px
		padding 10px
		box-sizing border-box
		border-radius 2px 2px 0px 0px
		
	input[type="text"]
		span(1/1)
		border none
		font-size 16px
		padding 10px
		box-sizing border-box
.placeInfo	
	width 360px
	position absolute
	background-color #fff
	border-radius 2px
	top 150px
	z-index 999
	left 10px
	box-shadow 0 0 5px 1px rgba(0,0,0,.2)
	
	h1, h2
		padding 0px
		margin 0px
		span(1/1)
	h1
		font-size 16px
		padding 10px
		box-sizing border-box
		font-weight 100
		border-bottom 1px dotted #95a5a6
	h2
		font-size 14px
		padding 10px
		font-weight 100
		box-sizing border-box
		color #7f8c8d
	ul
		padding 10px
		margin 0px
		
		li
			display inline-block
			background-color #2ecc71
			font-size 10px
			border-radius 10px
			padding 5px
			color #fff
			margin-right 5px