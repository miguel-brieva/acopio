@import '../node_modules/jeet/stylus/jeet/index'
@import 'globals'
@import 'header'
@import 'aside'

body
	background-color rgba(239,239,239,.4)
	color text-color
	font-family 'Open Sans', sans-serif
	padding 0px
	margin 0px
	padding-bottom 30px
	
	h1, h2, h3, h4, h5, h6
		color titles-color
#add-place
	margin-top	10px
#home-map
	height 400px!important
	span(1/1)
.search-place
	width 360px
	height 60px
	position absolute
	background-color #fff
	border-radius 2px
	top 70px
	z-index 999
	left 10px
	box-shadow 0 0 5px 1px rgba(0,0,0,.2)
	label
		background-color #7f8c8d
		span(1/1)
		color #fff
		font-size 14px
		padding 10px
		box-sizing border-box
		border-radius 2px 2px 0px 0px
		
	input[type="text"]
		span(1/1)
		border none
		font-size 16px
		padding 10px
		box-sizing border-box
.container
	width 90%
	max-width 600px
	margin 0 auto
	.col,.col-100
		span(1/2)
		box-sizing border-box
		padding 0px 10px
		label
			color #000
			span(1/1)
			margint-bottom 5px
		input[type="text"]
			span(1/1)
			border 1px solid #efefef
			padding 10px
			border-radius 3px
			margint-bottom 15px
			box-sizing border-box
	.col-100
		span(1/1)
.content
	center(960px)
	.campaign-container
		width 100%
		display flex
		flex-flow  row wrap
		justify-content space-between
		align-items stretch

	h1
		span(1/1)
		font-family 'Raleway', sans-serif
		font-size 30px
		font-weight 100
	.campaign
		width 32%
		background-color #fff
		min-height 140px
		position relative
		margin-bottom 15px
		box-shadow 0 0 2px 1px rgba(0,0,0,.1)
		padding-bottom 50px

		figure
			span(1/1)
			padding 0px
			margin 0px
			img
				width 100%
		h2
			margin 0px
		p
			font-size 14px
		.text
			span(1/1)
			padding 10px
			box-sizing border-box
		a
			background-color #2ecc71
			padding 10px
			color #fff
			text-decoration none
			border-radius 3px
			display inline-block
			margin-left 10px
			position absolute
			bottom 10px
			right 10px

.placeInfo	
	width 360px
	position absolute
	background-color #fff
	border-radius 2px
	top 160px
	z-index 999
	left 10px
	box-shadow 0 0 5px 1px rgba(0,0,0,.2)
	
	h1, h2
		padding 0px
		margin 0px
		span(1/1)
	h1
		font-size 16px
		padding 10px
		box-sizing border-box
		font-weight 100
		border-bottom 1px dotted #95a5a6
	h2
		font-size 14px
		padding 10px
		font-weight 100
		box-sizing border-box
		color #7f8c8d
	ul
		padding 10px
		margin 0px
		
		li
			display inline-block
			background-color #2ecc71
			font-size 10px
			border-radius 10px
			padding 5px
			color #fff
			margin-right 5px